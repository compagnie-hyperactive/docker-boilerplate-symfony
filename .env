MYSQL_HOST_VOLUME_PATH=./data/mysql/5.7

APPLICATION_WEB_PORT=8800
PHP_MY_ADMIN_PORT=8801

SECRET=TO_BE_CHANGED_FOR_SOMETHING_REALLY_SECRET

COMPOSER_HOME=/var/www/html/.composer
